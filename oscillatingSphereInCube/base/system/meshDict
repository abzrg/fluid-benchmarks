FoamFile
{
    version   2.0;
    format    ascii;
    class     dictionary;
    location  "system";
    object    meshDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

surfaceFile         "geometry.fms";

// Division factor of cells per refinement level
// Note: it must be at least 1.0.
divisionFactor      1.5;

#message "Division factor: $divisionFactor";
#message "MESH_LEVEL: $MESH_LEVEL";

minCellSize         ${{ 1 / pow($divisionFactor, ${MESH_LEVEL:-1}) }};

maxCellSize         $minCellSize;

boundaryCellSize    $minCellSize;

localRefinement
{
    "sphere"
    {
        cellSize    ${{ ${minCellSize}/2 }};
    }

    "xmin|ymin|zmin|xmax|ymax|zmax"
    {
        cellSize    ${{ ${minCellSize}/2 }};
    }
}

objectRefinements
{
    outerSphere
    {
        type        "sphere";
        cellSize    ${{ ${minCellSize}/2 }};
        centre      (0 0 0);
        radius      0.6;
    }
}

