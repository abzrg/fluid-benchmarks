FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fluidProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

fluidModel ${FLUID_MODEL:-pimpleFluid};

pimpleFluidCoeffs
{}

newtonIcoFluidCoeffs
{
    // Pressure stabilisation
    stabilisation
    {
        type        RhieChow;
        scaleFactor 1.0;

        // type        laplacian;
        // omega       [0 -2 1 0 0 0 0] 100;
    }

    // Set the pressure to zero at the centre cell
    pRefPoint       (0.5 0.2 0);
    pRefValue       0.0;

    // PETSc options file used by PETSc SNES
    optionsFile     petscOptions.pcsplit3D;
    //optionsFile     petscOptions.lu;
}

