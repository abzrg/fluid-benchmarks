FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      D;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    cylinder
    {
        type            fixedDisplacement;
        displacementSeries
        {
            file    "$FOAM_CASE/constant/timeVsDisplacement";
            outOfBounds clamp;
        }

        // code
        // #{
        //     const scalar x0 = 1.0;
        //     const scalar A = 0.25;
        //     const scalar f = 0.25;
        //     const scalar twoPiF = 2.0*constant::mathematical::pi*f;
        //     const scalar t = db().time().value();
        //     const vector x(x0 + A*sin(twoPiF*t), 0.0, 0.0);
        //     operator==(x);
        // #};

        value           uniform (0 0 0);
    }
    "left|right"
    {
        type            fixedDisplacement;
        value           uniform (0 0 0);
    }
    "up|down"
    {
        //type            symmetry;
        // type            fixedDisplacement;
        type            slip;
        // type            fixedDisplacementZeroShear;
        //forceZeroShearGrad yes;
        //type            fixedValue;
        value           uniform (0 0 0);
    }
    frontAndBack
    {
        type            empty;
    }
}

