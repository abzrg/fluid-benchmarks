FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    cylinder
    {
        type            codedFixedValue;
        name            oscillatingCylinderVelocity;

        code
        #{
            const scalar A = 0.25;
            const scalar f = 0.25;
            const scalar twoPiF = 2.0*constant::mathematical::pi*f;
            const scalar t = db().time().value();
            const vector v(A*twoPiF*cos(twoPiF*t), 0.0, 0.0);
            operator==(v);
        #};

        value           uniform (0 0 0);
    }
    "left|right|up|down"
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    front
    {
        type            empty;
    }
    back
    {
        type            empty;
    }
}

// ************************************************************************* //
